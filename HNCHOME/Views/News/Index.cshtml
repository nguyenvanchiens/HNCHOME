@model HNCHOME.ViewModel.PagingModel<HNCHOME.Models.NewsModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Css{
<link rel="stylesheet" href="/css/post.css">
}

<div class="post-content">
    <div class="contact-post">
        <div class="post__header">
            <div class="post__title">
                <h1>BẢN TIN HỢP NHẤT</h1>
            </div>
        </div>
        <div class="container">
            <div class="new-wrap row">
                <div class="posts__content col-lg-12 col-md-12 col-xl-8">
                    <div class="list__post">

                        @foreach (var item in Model.ListModel)
                        {
                            <div class="list__post__item row">
                                <div class="col-md-12 col-lg-6 col-xl-6 list__post__item--left">
                                    <figure style='background: url("../NewsImg/@item.ImgUrl") no-repeat center;'>
                                        <a href="">
                                            <div class="text__overlay">
                                                <div class="text__info">
                                                    <span>xem thêm</span>
                                                </div>
                                            </div>
                                        </a>
                                    </figure>
                                </div>
                                <div class="col-md-12 col-lg-6 col-xl-6 list__post__item--right">
                                    <div class="post__content">
                                        <div class="post__content__tile">
                                            <a href="#" class="tile__link title_content" style="text-transform:uppercase">@item.Title</a>
                                        </div>
                                        <div class="post__content__meta">
                                            <div class="new-text-wrap">
                                                <div class="new-text-left">
                                                    <i class="fa fa-folder"></i>
                                                    <span> Bản tin Hợp Nhất</span>
                                                </div>
                                                <div class="new-text-right">
                                                    <i class="fa fa-clock-o"></i>
                                                    <span>@item.CreatedDate.ToString("dd/MM/yyyy")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <p class="post__content__summary">

                                            @item.Content
                                        </p>
                                        <div class="post__content__footer">
                                            <div class="post__content__footer-icon">
                                                <div class="socials">
                                                    <a href="" rel="nofollow" target="_blank"><i class="fa fa-facebook"></i></a>
                                                    <a href="" rel="nofollow" target="_blank"><i class="fa fa-twitter"></i></a>
                                                    <a href="" rel="nofollow" target="_blank"><i class="fa fa-linkedin-square"></i></a>
                                                    <a href="" rel="nofollow" target="_blank"><i class="fa fa-google-plus"></i></a>
                                                </div>
                                            </div>
                                            <div class="post__content__footer-btn__view">
                                                <button class="btn btn-default btn--view-more">xem chi tiết</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="page-post">
                            <span class="page-numbers current left" style="display:none" id="start">
                                <i class="fa-solid fa-caret-left"></i>
                                <i class="fa-solid fa-caret-left"></i>
                            </span>

                            <span id="previous" style="display:none" class="page-numbers current left"><i class="fa-solid fa-caret-left"></i></span>

                            <span style="display:none" class="page-numbers current left_dotted">
                                ...
                            </span>
                            @for (var i = 1; i <= Model.PageCount; i++)
                            {
                                <a href="~/News/Index?pageIndex=@i">@i</a>
                            }
                            <span style="display:none" class="page-numbers current right_dotted">
                                ...
                            </span>

                            <span id="next" style="display:none" class="right"><i class="fa-solid fa-caret-right"></i></span>

                            <span style="display:none" class="page-numbers current right" id="end">

                                <i class="fa-solid fa-caret-right"></i>
                                <i class="fa-solid fa-caret-right"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="sidebar__post__right col-lg-12 col-md-12 col-xl-4">
                    <div class="row">
                        <section class="col-md-6 col-sm-6 col-lg-6 col-xl-12">
                            <div class="track-form">
                                <lable class="title_content">TRA CỨU BƯU PHẨM, BƯU KIỆN</lable>
                                <textarea name="" class="form-control" id="" cols="30" rows="2" placeholder="Ví dụ: Số vận đơn là 893020080682251, 893010100170926..."></textarea>
                                <a href="#" class="btn btn-default btn-search">Tìm Kiếm</a>
                            </div>
                        </section>
                        <section class="col-md-6 col-sm-6 col-lg-6 col-xl-12">
                            <div class="country-form mt-40">
                                <div class="title_content__pb--3">
                                    <lable class="title_content ">TÌM KIẾM TRUNG TÂM GIAO DỊCH:</lable>
                                </div>
                                <div class="form-wrap">

                                    <div class="form-group">
                                        <div class="mb-1">
                                            <span class="">Quốc gia:</span>
                                        </div>
                                        <div>
                                            @await Component.InvokeAsync(Constants.HomeComponent.CountryComponent)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-wrap">

                                    <div class="form-group">
                                        <div class="mb-1">
                                            <span class="">Tỉnh / Thành phố:</span>
                                        </div>
                                        <div>
                                            @await Component.InvokeAsync(Constants.HomeComponent.BranchComponent)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-wrap">
                                    <a href="#" class="btn btn-default btn-search">Tìm Kiếm</a>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col-xl-12 d-lg-none d-xl-block d-md-none d-sm-none">
                            <div class="new-hot mt-40">
                                <div class="title_content__pb--3">
                                    <lable class="title_content ">BÀI VIẾT MỚI NHẤT:</lable>
                                </div>
                                <div class="list__news mt-2">
                                    <div class="list__news__item">
                                        <a href="">
                                            <div class="new__image" style="background: url('./img/chuyen-phat-nhanh-trong-nuoc519.png') no-repeat;"></div>
                                        </a>
                                        <div class="new__text mt-2">
                                            <a href="#" class="new__text-link">Vận chuyển hàng hóa quốc tế Aircargo</a>
                                        </div>
                                    </div>
                                    <div class="list__news__item">
                                        <a href="">
                                            <div class="new__image" style="background: url('./img/Van\ chuyen\ hang\ TMDT337.jpg') no-repeat;"></div>
                                        </a>
                                        <div class="new__text mt-2">
                                            <a href="#" class="new__text-link">Vận chuyển hàng hóa quốc tế Express</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col-xl-12">
                            <div class="contact-wrap mt-40">
                                <div class="title_content__pb--3">
                                    <lable class="title_content ">HỖ TRỢ KHÁCH HÀNG:</lable>
                                    <div class="list__contact">
                                        <div class="contact__item">
                                            <address class="mt-2">
                                                <div class="phone">
                                                    <i class="fa fa-phone"></i>
                                                    <a href="Tel:1900558866">Hotline: 1900 55 88 66</a>
                                                </div>
                                                <div class="social">
                                                    <i class="fa fa-envelope"></i>
                                                    <a href="mailto:info@hopnhat.com">Email:  info@hopnhat.com</a>
                                                </div>
                                            </address>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="/js/contact.js"></script>
<script>
    $(document).ready(function(){

        var currentIndex=1;
        if(window.location.href.split('=')[1]){
            currentIndex=window.location.href.split('=')[1];
        }
        if(currentIndex>1){
            $(".left").removeAttr("style");
        }
        if(currentIndex<@Model.PageCount){
            $(".right").removeAttr("style");
        }
        $(".page-post>a").each(function(){
            var hrefIndex=$(this).attr("href").split('=')[1];
            console.log(hrefIndex);
            if(hrefIndex<(currentIndex-2)){
                $(this).css("display","none");
                $(".left_dotted").removeAttr("style");
            };
            //if(hrefIndex>(currentIndex+2)){
            //    $(this).css("display","none");
            //    $(".right_dotted").removeAttr("style");
            //};
        }),
        $("#end").click(function(){
            window.location="/News/Index?pageIndex=@Model.PageCount"
        })
        $("#start").click(function(){
            window.location="/News/Index?pageIndex=1"
        }),
        $("#next").click(function(){
            window.location="/News/Index?pageIndex="+(++currentIndex)
        }),
        $("#previous").click(function(){
            window.location="/News/Index?pageIndex="+(--currentIndex)
        })
    });
</script>
}